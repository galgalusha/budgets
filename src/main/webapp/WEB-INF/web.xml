<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/classes/log4j.properties</param-value>
    </context-param>

    <servlet>
        <servlet-name>budgets</servlet-name>
        <servlet-class>galko.budgets.service_layer.servlets.BudgetsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>budget</servlet-name>
        <servlet-class>galko.budgets.service_layer.servlets.BudgetServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>newExpense</servlet-name>
        <servlet-class>galko.budgets.service_layer.servlets.SubmitExpenseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>budgets</servlet-name>
        <url-pattern>/budgets/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>budget</servlet-name>
        <url-pattern>/budget/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>newExpense</servlet-name>
        <url-pattern>/newExpense/*</url-pattern>
    </servlet-mapping>

</web-app>
